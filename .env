# .env
PROJECT_NAME=Interview System API
ENVIRONMENT=development
API_V1_STR=/api/v1

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 数据库
DATABASE_URL=sqlite:///./app.db

# JWT（重要！生产环境必须改）
SECRET_KEY=your_actual_secret_key_here_make_it_long_and_random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 文件上传
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760

# CORS（生产环境要改为实际域名）
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# 第三方服务（可选）
OPENAI_API_KEY=
SPEECH_TO_TEXT_API_KEY=

# 日志
LOG_LEVEL=DEBUG
LOG_FILE=app.log

# Redis（如果使用）
REDIS_URL=redis://localhost:6379